<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"

    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- A CardView that contains a TextView -->
    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#E7E7E7"
        card_view:cardCornerRadius="40dp"
        app:cardElevation="2dp"
        app:contentPadding="4dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <FrameLayout
                android:id="@+id/square_verification"
                android:layout_width="80dp"
                android:clickable="true"
                android:background="@drawable/validation_square"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                >
                <ImageView
                    android:id="@+id/confirmation_view"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/confirmation_vector"
                    >
                </ImageView>
                <ImageView
                    android:id="@+id/error_view"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/error_vector"
                    >
                </ImageView>
            </FrameLayout>

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="item_title"
                android:fontFamily="@font/ayaka"
                android:layout_toEndOf="@+id/square_verification"
                android:textStyle="bold"
                android:layout_toRightOf="@id/square_verification"
                android:layout_alignParentTop="true"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/item_dni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="item_dni"
                android:fontFamily="@font/ayaka"
                android:layout_toEndOf="@+id/square_verification"
                android:textStyle="bold"
                android:layout_toRightOf="@id/square_verification"
                android:layout_below="@+id/item_title"
                android:textSize="15sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="item_gid"
                android:id="@+id/item_gid"
                android:fontFamily="@font/ayaka"
                android:layout_toEndOf="@+id/square_verification"
                android:textStyle="bold"
                android:layout_toRightOf="@id/square_verification"
                android:layout_below="@+id/item_dni"
                android:textSize="15sp"
                />
            <ImageView
                android:id="@+id/group_bottom"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/group_vector"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                >
            </ImageView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
