<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"

    tools:context=".presentation.EventInfo.EventInfoFragment">
    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/waves"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/top_waves"
        android:scaleType="fitStart"
        tools:ignore="MissingConstraints" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        app:columnCount="1">
        <ImageView
            android:id="@+id/imageEvent"
            android:src="@drawable/event_image"
            app:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            >

        </ImageView>
        <TextView
            android:id="@+id/nombreevento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nombre del Evento"
            android:fontFamily="@font/ayaka"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textAlignment="center"

            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/primary"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="-15dp"
            >


        </FrameLayout>
        <FrameLayout
            android:id="@+id/EventFrame"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            app:layout_gravity="center"
            android:layout_marginTop="-70dp"
            android:background="@drawable/quitar_dani"

            >

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                app:columnCount="1"
                >


                <!-- Hora de inicio -->
                <TextView
                    android:id="@+id/horaIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"

                    android:fontFamily="@font/ayaka"
                    android:textSize="25sp"
                    android:layout_marginBottom="10dp"
                    app:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/horaFin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"

                    android:fontFamily="@font/ayaka"
                    android:textSize="25sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:layout_gravity="center"
                    />

                <TextView
                    android:id="@+id/aforo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aforo disponible: x"
                    android:textAlignment="center"

                    android:fontFamily="@font/ayaka"
                    android:textSize="25sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:layout_gravity="center"
                    />

                <!-- Entradas validas -->
                <TextView
                    android:id="@+id/Validadas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"

                    android:fontFamily="@font/ayaka"
                    android:textSize="25sp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    app:layout_gravity="center"
                    />



                <!-- Entradas no validas -->
                <TextView
                    android:id="@+id/noValid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"

                    android:fontFamily="@font/ayaka"
                    android:textSize="25sp"
                    android:layout_marginTop="5dp"
                    app:layout_gravity="center"
                    />

            </androidx.gridlayout.widget.GridLayout>
        </FrameLayout>





    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>