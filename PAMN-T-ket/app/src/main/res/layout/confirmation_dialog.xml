<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"

    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- A CardView that contains a TextView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/dialog"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#E7E7E7"
        card_view:cardCornerRadius="40dp"
        app:cardElevation="6dp"
        app:contentPadding="4dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

                <ImageView
                    android:id="@+id/confirmation_svg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/confirmation_vector_big"
                    >
                </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exito"
                android:text="Â¡Success!"
                android:fontFamily="@font/ayaka"
                android:gravity="center"
                android:textSize="35sp"
                android:layout_marginTop="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/confirmation_svg"
                >
            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="The ticket has been successfully validated."
                android:fontFamily="@font/ayaka"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="-10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/exito"
                >
            </TextView>

        </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

